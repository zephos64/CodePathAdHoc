<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateEventDataFragment" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="461dp" >

        <com.codepath.adhoc.CustomEventSpinner
            android:id="@+id/spListEvents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="8dp"
            android:prompt="@string/sport_prompt"
            android:entries="@array/sport_array" />

        <TextView
            android:id="@+id/tvMaxAttendees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/spListEvents"
            android:paddingBottom="8dp"
            android:text="@string/maxAtt"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/etMaxAttendees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/spListEvents"
            android:layout_toRightOf="@+id/tvStartTime"
            android:ems="10"
            android:gravity="right"
            android:inputType="number" >

        </EditText>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tvLocation"
            android:layout_marginTop="18dp"
            android:text="@string/desc"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvDescription"
            android:ems="10"
            android:maxLength="200"
            android:hint="@string/descBody"
            android:paddingBottom="8dp" >
        </EditText>

        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/etMaxAttendees"
            android:layout_marginTop="19dp"
            android:text="@string/startTime"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/etStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvStartTime"
            android:layout_alignLeft="@+id/etMaxAttendees"
            android:layout_alignParentRight="true"
            android:ems="10"
            android:gravity="right" />

        <TextView
            android:id="@+id/tvStopTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tvStartTime"
            android:layout_marginTop="10dp"
            android:text="@string/endTime"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/etLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvDescription"
            android:layout_alignLeft="@+id/etEndTime"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/etEndTime"
            android:ems="10"
            android:gravity="right" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tvStopTime"
            android:layout_marginTop="10dp"
            android:text="@string/location"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/etEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvLocation"
            android:layout_alignLeft="@+id/etStartTime"
            android:layout_alignParentRight="true"
            android:ems="10"
            android:gravity="right" />
        
    </RelativeLayout>

</ScrollView>
