<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="SectionDivider" parent="@style/AppBaseTheme">
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="AppLoginText" parent="@style/AppBaseTheme">
        <item name="android:textSize">69sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="custom_progress_bar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">10dip</item>
        <item name="android:progressDrawable">@drawable/custom_progress_bar_horizontal</item>
    </style>

    <style name="Widget.ProgressBar.Vertical">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/list_progress_bar_vertical</item>
        <item name="android:minWidth">40dip</item>
        <item name="android:maxWidth">40dip</item>
    </style>

    <style name="Widget.ProgressBar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:maxWidth">48dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>
    <style name="Widget"></style>
    
    <style name="NiceButton">
        <item name="android:background">@drawable/states_nice_button</item>
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:text">Button</item>
        <item name="android:textColor">#1485CC</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="LoginButton">
        <item name="android:background">@drawable/states_login_button</item>
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:text">Button</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">center</item>
    </style>
        <style name="login_button_style" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#55ACEE</item>

    </style>

</resources>